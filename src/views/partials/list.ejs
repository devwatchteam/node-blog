<div id="mount">
  <div class="wrap wrap-body">
    <ul class="post-list">
      <% for(var i = 0; i < list.length; i++) {%>
        <li class="post-list-item">
          <a class="post-link" href="/<%-process.env.npm_package_reponame%>/post/<%=list[i].filename%>">
            <date class="post-date"><%=list[i].date.replace(/\"/g, "")%></date>
            <h2 class="post-header"><%=list[i].title.replace(/\"/g, "")%></h2>
            <p class="post-description"><%=list[i].description.replace(/\"/g, "")%></p>
          </a>
            <ul class="post-tags-list">
              <%
                const tags = list[i].tags;
                for(let i = 0; i < tags.length; i++) {%>
                <li>
                  <a class="post-tags" href="/<%-process.env.npm_package_reponame%>%>/<%=tags[i]%>">
                    <%=tags[i].replace(/\"/g, "")%>
                  </a>
                </li>
              <%}%>
            </ul>

        </li>
      <%}%>
    </ul>
  </div>
</div>
