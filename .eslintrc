{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "plugins": [
    "babel"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "__WEBPACK__": true
  },
  "rules": {
    "no-alert": 2,
    "no-console": 0,
    "no-empty": 1,
    "no-unused-vars": [2, {argsIgnorePattern: "__$"}],
    "curly": [2, 'all'],
    "no-irregular-whitespace": 2,
    "eqeqeq": 2,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "indent": ["error", 2],
    "eol-last": 2
  }
}
